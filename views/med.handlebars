
<div>

  <p><h6 style="color: #065b83;">Posted on : {{  format_date meds.date_created}} by {{meds.med_name}} | {{meds.made_by}} </p></h6>
  <p><span class="col-md-12">{{meds.content}}</span></p>
{{#if comments.length}}
<p class="commets">Comments:</p>
{{/if}}  
  {{#each comments as |comment| }}
    <div class="row mb-4 project">
      <div class="col-md-12">
        <h6 class="col-md-2" style="display: inline;">{{get_emoji}}{{comment.comment}} <p style="color: red;display: inline;">|</p> Posted by: {{comment.name}} on {{format_date comment.date_created}} <p>Rating: {{comment.rating}}</p> </h6>
      </div>
      <div class="col-md-7">
        <p>
        </p>
      </div>
    </div>
{{/each}}
{{#if logged_in}}
  <form class="form new-comemnt-form" id="comment-form">
        <div class="form-group">
          <label for="comment-submit"></label>
          <input class="form-input" type="text" id="comment-submit" />
        </div>
  <div class="range-container form-group">
    <h4>How would you rate the medication?<i class="fa-solid fa-syringe"></i></h4>
      <select class="rating-select" id="med-rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option selected value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
  </div>

<button style="display: inline;" class="btn btn-primary" type="submit" id="s1" value="{{meds.id}}" >Submit</button>
  </div>
</form>
{{/if}}

<script src="/js/submit-comment.js"></script>
 